<div class="container">

<h1>商品新規登録</h1>
   <%= form_with model: @item,url: admin_items_path, method: :POST do |f| %>

<table>
   <tr>
     <th>商品画像</th>
     <th><%= f.file_field :image, accept: "image/*" %></th>
  </tr>
  
   <tr>
     <th>商品名</th>
     <th><%= f.text_field :name %></th>
  </tr>

  <tr>
     <th>商品説明</th>
     <th><%= f.text_area :introduction %></th>
  </tr>
  
   <tr>
     <th>ジャンル</th>
     <th><%= f.collection_select :genre_id, Genre.all, :id, :name %></th>
   </tr>
   
   <tr>
     <th>税抜価格</th>
     <th><%= f.number_field :price %>円</th>
   </tr>

   <tr><td> <%= f.submit '新規登録',class:"btn btn-success" %> </tb></tr>
</table>
  
   <% end %>
   
</div>