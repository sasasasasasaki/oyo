<div class="container">

 <h3><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h3>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>

  <tr>
    <th>氏名</th>
    <td><%= @customer.first_name %></td>
    <td><%= @customer.last_name %></td>
  </tr>

  <tr>
    <th>カナ</th>
    <td><%= @customer.first_name_kana %></td>
    <td><%= @customer.last_name_kana %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>

  <tr>
    <th>会員ステータス</th>
    <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
  </tr>
</table>

<%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-success" do %>編集する
<% end %>

<%= link_to public_orders_path, class: "btn btn-info" do %>注文一覧を見る
<% end %>
