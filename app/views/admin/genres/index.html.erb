<div class="container">

<h1>ジャンル一覧・追加</h1>

<div class="col-md-3">
      <%= form_with model: @genre,url: admin_genres_path, method: :POST do |f| %>
          <h4>ジャンル名</h4>
          <table>
              <tr>
                <th><%= f.text_field :name %></th>
                <th><%= f.submit '新規登録' ,class:"btn btn-success" %></th>
              </tr>
          </table>

<table class="table table-hover table-inverse">
  <thead>
   <tr>
   <th><h4>ジャンル</h4></th>
    </thead>

    <tbody>
 　      <% @genres.each do |genre| %>
 　      <tr>
 　      <td> <%= genre.name %> </td>
 　      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>

 　      </tr>


   <% end %>

</table>
</div>
</div>
<% end %>