<h2>注文情報確認</h2>
<table>
 <thead>
   <tr>
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
   </tr>

   <% @cart_item.each do |cart_item| %>
   <tr>
     <td><%= cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price %>円</td>
     <td><%= cart_item.amount %></td>
     <td><%= cart_item.subtotal %>円</td>


   </tr>
   <% @total += cart_item.subtotal %>
   <% end %>
   <tr><td>送料:<%= @order.shipping_cost %></td></tr>

   <% @total += 800 %>

   <tr><th>合計:<%= @total %></th><tr>

 </thead>

 <tbody>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>

    <tr>
      <th>お届け先</th>
    </tr>

    <tr>
      <td><%= @order.postal_code %></td>
      <td><%= @order.address %></td>
      <td><%= @order.name %></td>

    </tr>
  <tbody>
</table>
<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>

<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
<%= f.hidden_field :total_payment, :value => @total %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.hidden_field :status, :value => 0 %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.submit '注文確定',class:"btn btn-success" %>
<% end %>