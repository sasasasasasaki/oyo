<h2>注文履歴</h2>

<table border="1">
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>

  <% @orders.each do |orders| %>
  <tr>

    <td><%= orders.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    <td><%= orders.postal_code %><%= orders.address %><%= orders.name %></td>
    <td>
      <% orders.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
      <% end %>
    </td>
    <td><%= orders.total_payment %>円</td>
    <td><%= orders.status %></td>
    <td><%= link_to public_order_path(orders.id),class:"btn btn-success" do %>表示する
        <% end %></td>






  </tr>
<% end %>
</table>

