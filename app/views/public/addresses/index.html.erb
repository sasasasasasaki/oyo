<div class="container">

<%=   flash[:alert]  %>

 <h1>配送先登録／一覧</h1>

  <table>
    <%= form_with model: @address ,url: public_addresses_path do |f| %>
    <thead>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <th>住所</th>
      <td><%= f.text_area :address %></thd>
    </tr>

    <tr>
      <th>宛名</th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>
        <%= f.submit '新規登録',class:"btn btn-success" %>
    <% end %>
      </td>
    </tr>
   </thead>


    <tbody>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
      <% @addresses.each do |address| %>
      
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name%></td>
        <td><%= link_to "編集", edit_public_address_path(address.id) %></td>
        <td><%= link_to "削除", public_address_path(address.id) ,method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    </tbody>

     <% end %>

  </table>




