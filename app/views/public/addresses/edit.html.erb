<div class="container">

<h1>配送先編集</h1>

<%= form_with model: @address, url: public_address_path(@address.id), method: :PATCH  do |f| %>

 <table>
   <tr>
     <th>郵便番号</th>
      <td>
        <%= f.text_field :postal_code %>
      </td>
    </tr>
    
   <tr>
     <th>郵便番号</th>
      <td>
        <%= f.text_area :address %>
      </td>
    </tr>

   <tr>
     <th>宛名</th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>

    <tr>
      <td><%= f.submit '変更内容を保存',class:"btn btn-success" %></td>
    </tr>

<% end %>
 </table>