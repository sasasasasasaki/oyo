<div class="container">

<h1>商品一覧</h1>
 <div class="row">
     <% @items.each do |item| %>
        
        <div class="col-4">
            <%= link_to public_item_path(item.id) do %>
      <table>
        <tr>
          <th><%= image_tag item.image, size: "100x100" %></th>
        <tr>
          <td><%= item.name %></td>
        <tr>
          <td><%= item.price %>円</td>
        </tr>
      </table>
       </div>
            <% end %>
      <% end %>
   

 </div>
</div>

 <%= paginate @page %>