<div class="container">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
   <tr>
     <th>名前</th>

       <td><%= f.label :（性）%>
          <%= f.text_field :first_name %>
          <%= f.label :（名）%>
          <%= f.text_field :last_name %>
       </td>
   </tr>

   <tr>
     <th>フリガナ</th>

        <td><%= f.label :（ｾｲ） %>
           <%= f.text_field :first_name_kana %>
           <%= f.label :（ﾒｲ） %>
           <%= f.text_field :last_name_kana %>
        </td>
   </tr>


   <tr>
      <th><%= f.label :メールアドレス %></th>
         <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
   </tr>

   <tr>
      <th><%= f.label :郵便番号（ハイフンなし） %></th>
         <td><%= f.number_field :postal_code %></td>
   </tr>

   <tr>
      <th><%= f.label :住所 %></th>
         <td><%= f.text_area :address %></td>
   </tr>

   <tr>
      <th><%= f.label :電話番号（ハイフンなし）%></th>
         <td><%= f.telephone_field :telephone_number %></td>
   </tr>

    <th><%= f.label :パスワード（６文字以上）%></th>
     <td>
       <% if @minimum_password_length %>

       <% end %><br />
       <%= f.password_field :password, autocomplete: "new-password" %>
     </td>
  </tr>

  <tr>
    <th>
      <%= f.label :パスワード（確認用） %>
    </th>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
  </tr>

  <td>
    <%= f.submit "新規登録" ,class:"btn btn-success" %>
  </td>
<% end %>

</table>

<h4>既に登録済みの方</h4>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
